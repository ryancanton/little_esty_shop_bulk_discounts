<%= form_with url: "/merchant/#{@merchant.id}/bulk_discounts?merchant_id=#{@merchant.id}", method: :post do |f| %>
  <%= f.label :percentage_discount %>
  <%= f.text_field :percentage_discount, required: true  %>
  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold, required: true  %>
  <%= f.submit %>
  <% end %>