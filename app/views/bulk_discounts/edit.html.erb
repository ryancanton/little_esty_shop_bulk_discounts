<%= form_with url: "/merchant/#{@bulk_discount.merchant_id}/bulk_discounts/#{@bulk_discount.id}", method: :patch do |f| %>
  <%= f.label :percentage_discount %>
  <%= f.text_field :percentage_discount, value: @bulk_discount.percentage_discount, required: true  %>
  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold, value: @bulk_discount.quantity_threshold, required: true  %>
  <%= f.submit %>
  <% end %>